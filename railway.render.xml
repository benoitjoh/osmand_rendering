<?xml version="1.0" encoding="utf-8"?>
<renderingStyle name="RailMap.render" depends="nautical" defaultColor="#D8F7BA" version="1">
	
	<order>
		<!-- line for tunnels-->
		<switch area="false" objectType="2">
			<case tag="railway" value="" order="130" minzoom="0">
				<apply_if additional="tunnel=yes" order="75"/>
				<apply_if additional="construction=yes" order="129"/>
				<apply_if additional="service=spur" order="129"/>
            </case>
		</switch>
	</order>
	
	
	<point>
		<case minzoom="7" tag="railway" value="station" icon="seamark_buoy_red_can" iconOrder="52"/>
		<case minzoom="7" tag="railway" value="halt" icon="seamark_buoy_red_can" iconOrder="52"/>
	</point>

	<polygon>
		<group>
			<filter  minzoom="5" maxzoom="18" color="#FFCA8B" tag="landuse" value="residential"/>
			<filter  minzoom="16" tag="building" value="" color="#b0b000"/>
		</group>
	</polygon>


	<line>
		<!-- Railways  -->
		<group>
			<filter tag="railway" value="rail" color="#FF0000"/>
			<filter tag="railway" value="light_rail" color="#FF0000" />
			<filter tag="railway" value="construction" color="#55ff55"/>
			<apply_if additional="tunnel=yes" color="#ffaaaa"/>

			<apply_if additional="service=spur" color="#666666"/>
      
			<groupFilter>
				<filter maxzoom="1" strokeWidth="2"/>
				<filter maxzoom="6" strokeWidth="1"/>
				<filter maxzoom="10" strokeWidth="1.5"/>
				<filter maxzoom="15" strokeWidth="2"/>
				<filter maxzoom="17" strokeWidth="4"/>
				<filter minzoom="18" strokeWidth="6" />
			</groupFilter>
			
		</group>

    
    
		<!-- highways in blue...  -->
		<group>
			<filter  tag="highway" value="motorway" color="#ffffff" color_0="#837DF6" order="2"/>
			<filter  tag="highway" value="motorway_link" color="#ffffff" color_0="#837DF6" order="2"/>
			<groupFilter>
				<filter minzoom="1" maxzoom="6" strokeWidth="1" strokeWidth_0="2"/>
				<filter minzoom="7" maxzoom="8" strokeWidth="1.3" strokeWidth_0="2.5"/>
				<filter minzoom="9" maxzoom="10" strokeWidth="3" strokeWidth_0="4"/>
				<filter minzoom="11" maxzoom="13" strokeWidth="4" strokeWidth_0="6"/>
				<filter minzoom="14" maxzoom="15" strokeWidth="5" strokeWidth_0="7"/>
				<filter minzoom="16" strokeWidth="9" strokeWidth_0="10"/>
			</groupFilter>
		</group>
	</line>
	
	<text>
		<group>
			<!-- supresse texts for harbours -->
			<filter tag="seamark:type" value="harbour" disable="true"/>
			
			<!-- name of stations -->
			<case tag="railway" value="station" textColor="#ff0000" textSize="15" textOrder="24" textHaloColor="#fddb8f" textHaloRadius="3"/>
		</group>
	</text>

</renderingStyle>

