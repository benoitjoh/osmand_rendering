<?xml version="1.0" encoding="utf-8"?>
<renderingStyle name="RailMap.render" depends="nautical" defaultColor="#D8F7BA" version="1">
	
	
	<order>
		<!-- line for tunnels-->
		<switch area="false" objectType="2">
			<case tag="railway" value="" order="130" minzoom="0">
				<apply_if additional="tunnel=yes" order="130"/>
				<apply_if additional="construction=yes" order="130"/>
            </case>
		</switch>
	</order>
	
	
	<polygon>

		<group>
			<filter  minzoom="2" maxzoom="18" color="#FFCA8B" tag="landuse" value="residential"/>
			<filter  minzoom="16" color="#b0b000" tag="building" value=""/>
		</group>
	</polygon>


	<line>

		<!-- Railways  -->
		<group>
			<filter tag="railway" value="rail" color="#FF0000"/>
			<filter tag="railway" value="light_rail" color="#FF0000" />
			
			<filter tag="railway" value="construction" color="#55ff55"  order="300"/>
			<apply_if additional="tunnel=yes" color="#ffaaaa" order="300"/>

      
			<groupFilter>
				<filter minzoom="-4" maxzoom="1" strokeWidth="2"/>
				<filter minzoom="2" maxzoom="6" strokeWidth="1.5"/>
				<filter minzoom="7" maxzoom="14" strokeWidth="2"/>
				<filter minzoom="15" maxzoom="15" strokeWidth="3"/>
				<filter minzoom="16" strokeWidth="5" />
			</groupFilter>
		</group>

    
    
		<!-- roads -->
		<group>
			<filter  tag="highway" value="motorway" color="#ffffff" color_0="#837DF6" order="2"/>
			<filter  tag="highway" value="motorway_link" color="#ffffff" color_0="#837DF6" order="2"/>
			<groupFilter>
				<filter minzoom="1" maxzoom="6" strokeWidth="1" strokeWidth_0="2"/>
				<filter minzoom="7" maxzoom="8" strokeWidth="1.3" strokeWidth_0="2"/>
				<filter minzoom="9" maxzoom="10" strokeWidth="2" strokeWidth_0="4"/>
				<filter minzoom="11" maxzoom="13" strokeWidth="3" strokeWidth_0="6"/>
				<filter minzoom="14" maxzoom="15" strokeWidth="4" strokeWidth_0="7"/>
				<filter minzoom="16" strokeWidth="5" strokeWidth_0="8"/>
			</groupFilter>
		</group>


	</line>
</renderingStyle>

